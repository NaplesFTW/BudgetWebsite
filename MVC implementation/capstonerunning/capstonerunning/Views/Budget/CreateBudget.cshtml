
@{
    ViewBag.Title = "CreateBudget";
}

<div class="back1">
<div class="container">
    <h2>Create New Budget</h2>

    <div class="row">
        <div class="col-sm-6">
            <form action="#">
                <div class="form-group">
                    <label for="categoryName">Category Name:</label>
                    <input class="form-control" id="categoryName">
                </div>
                <div class="form-group">
                    <label for="amount">Amount:</label>
                    <input type="text" class="form-control" id="amount">
                </div>
                <div class="form-group">
                    <label for="sub">Sub-category:</label>
                    <select class="form-control" id="sub">
                        <option value="0" selected="selected">None</option>
                        <option value="1">@@populate with already made categories</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add-Category</button>
            </form> 
        </div>
        <div class="col-sm-6">
            <table class="table table-hover table-bordered">
                <thead>
                <th>Category</th>
                <th>Amount</th>
                <th>Sub-category of</th>
                </thead>
                <tbody>
                <tr>
                    <td>Groceries</td>
                    <td>$300</td>
                    <td>None</td>
                </tr>
                </tbody>
            </table>
            <h3><strong>Total Allocated: </strong> $300</h3>
        </div>
    </div>
</div>
</div>